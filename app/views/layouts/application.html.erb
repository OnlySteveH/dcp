<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="keywords" content="<%= @seo_keywords %>" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class='button'>
      <div><%= link_to 'Home', root_path %></div>
      <div><%= link_to 'About me', about_path %></div>
      <div><%= link_to 'Contact', contact_path %></div>
      <div><%= link_to 'My Blog', blogs_path %></div>
      <div><%= link_to 'My Portfolio', portfolios_path %></div>
    </div>

    <% if current_user %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete  %>
    <% else %>
      <%= link_to 'Log in', user_session_path %>
      <%= link_to 'Register', new_user_registration_path %>
    <% end %>

    <%= yield %>

    <% if session[:source] %>
      <p>Thanks for visiting me from <%= session[:source] %>!</p>
    <% end %>
  </body>
</html>
